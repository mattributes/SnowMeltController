<!doctype html>

<html lang="en">
<head>
	<title>Snow Melt Controller</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="/static/css/main.css">
	<link rel="stylesheet" href="/static/css/login.css">
</head>
<body>
	<div class="container">
		<% include ../views/partials/header %>
		<form id='LoginForm' class="form-signin">
			<div class="loginHeading">Login</div>
			<label for="InputUser" class="sr-only">Username</label>
			<input id="InputUser" name="user" class="form-control" placeholder="Username" required="" autofocus="">
			<label for="InputPassword" class="sr-only">Password</label>
			<input name="password" type="password" id="InputPassword" class="form-control" placeholder="Password" required="">
		</form>
		<button id='LoginSubmit' class="btn btn-lg btn-primary btn-block">Sign in</button>
	</div>
	<script src="/static/js/login.js"></script>
</body>
</html>